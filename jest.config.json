{
  "rootDir": "./",
  "preset": "react-native",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
  "clearMocks": true,
  "maxWorkers": "50%",
  "collectCoverage": false,
  "coverageReporters": ["lcov", "text-summary"],
  "coverageThreshold": {
    "global": {
      "statements": 78.77,
      "branches": 57.3,
      "functions": 70,
      "lines": 79.43
    }
  },
  "testPathIgnorePatterns": ["<rootDir>/peach-api"],
  "transform": {
    "\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
    "^.+\\.(t|j)sx?$": [
      "@swc/jest",
      {
        "jsc": {
          "transform": {
            "react": {
              "runtime": "automatic"
            }
          }
        }
      }
    ]
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(@react-native|react-native|@react-native-community|react-native-form-validator|react-native-permissions|react-native-shadow-2|react-native-qrcode-svg|bdk-rn|react-native-parsed-text|react-native-reanimated|react-native-reanimated-carousel|react-native-url-polyfill|react-native-camera)/)"
  ],
  "setupFiles": ["./tests/unit/prepare.ts"],
  "moduleNameMapper": {
    "\\.(ttf|woff|woff2|eot|otf)$": "jest-transform-stub",
    "\\.(svg)$": "<rootDir>/__mocks__/fileMock.js"
  },
  "moduleDirectories": ["node_modules", "./tests/unit/helpers"],
  "coveragePathIgnorePatterns": ["/node_modules/", "src/views/TestView"],
  "collectCoverageFrom": ["src/**/*.{js,jsx,ts,tsx}", "!src/**/*.d.ts", "!src/views/TestView/**/*"]
}
