{
  "rootDir": "./",
  "preset": "react-native",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
  "collectCoverage": true,
  "coverageReporters": ["lcov"],
  "coverageThreshold": {
    "global": {
      "statements": 55.5,
      "branches": 16.4,
      "functions": 33,
      "lines": 58
    }
  },
  "transform": {
    "\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
    "^.+\\.(t|j)sx?$": ["@swc/jest", { "jsc": { "transform": { "react": { "runtime": "automatic" } } } }]
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(@react-native|react-native|@react-native-community|react-native-webview|react-native-canvas|react-native-form-validator|react-native-permissions|react-native-shadow-2|react-native-qrcode-svg|bdk-rn|react-native-parsed-text)/)"
  ],
  "setupFiles": ["./tests/unit/prepare.ts", "./node_modules/react-native-gesture-handler/jestSetup.js"],
  "moduleNameMapper": {
    "\\.(ttf|woff|woff2|eot|otf)$": "jest-transform-stub",
    "\\.(jpg|jpeg|png|gif|webp|svg|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
    "^@env(.*)$": "<rootDir>/.env.dist$1"
  },
  "coveragePathIgnorePatterns": ["/node_modules/", "src/views/TestView"]
}
