{
  "rootDir": "./",
  "preset": "react-native",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
  "clearMocks": true,
  "maxWorkers": "50%",
  "collectCoverage": false,
  "coverageReporters": ["lcov", "text-summary"],
  "coverageThreshold": {
    "global": {
      "statements": 84.48,
      "branches": 66.18,
      "functions": 76.15,
      "lines": 85.84
    }
  },
  "transform": {
    "\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
    "^.+\\.(t|j)sx?$": [
      "@swc/jest",
      {
        "jsc": {
          "transform": {
            "react": {
              "runtime": "automatic"
            }
          }
        }
      }
    ]
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(@react-native|react-native|@react-native-community|react-native-form-validator|react-native-permissions|react-native-shadow-2|react-native-qrcode-svg|bdk-rn|react-native-parsed-text|react-native-snap-carousel|react-native-url-polyfill|react-native-camera)/)"
  ],
  "setupFiles": ["./tests/unit/prepare.ts", "./node_modules/react-native-gesture-handler/jestSetup.js"],
  "moduleNameMapper": {
    "\\.(ttf|woff|woff2|eot|otf)$": "jest-transform-stub",
    "\\.(jpg|jpeg|png|gif|webp|svg|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
  },
  "coveragePathIgnorePatterns": ["/node_modules/", "src/views/TestView"]
}
