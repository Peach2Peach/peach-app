{
  "name": "peach",
  "version": "0.1.7",
  "description": "Peach Application",
  "author": "Peach2Peach",
  "private": true,
  "scripts": {
    "web": "cp -r ./assets ./public/assets/ && react-scripts start",
    "android": "NODE_ENV=sandbox react-native run-android --port=8081 --variant=QaDebug",
    "android:testnet": "NODE_ENV=development react-native run-android --port=8081 --variant=QaDebug",
    "android:mainnet": "NODE_ENV=production react-native run-android --port=8081 --variant=ProdDebug --appIdSuffix=mainnet",
    "ios": "NODE_ENV=sandbox react-native run-ios --port=8081 --simulator=\"iPhone 14\"",
    "ios:testnet": "NODE_ENV=development react-native run-ios --port=8081 --simulator=\"iPhone 14\" --variant=QaDebug",
    "ios:mainnet": "NODE_ENV=production react-native run-ios --port=8081 --simulator=\"iPhone 14\" --variant=ProdDebug --appIdSuffix=mainnet",
    "start": "NODE_ENV=sandbox react-native start --port=8081",
    "start:testnet": "NODE_ENV=development react-native start --port=8081",
    "start:mainnet": "NODE_ENV=production react-native start --port=8081",
    "cache:clear": "react-native start --reset-cache",
    "postinstall": "rn-nodeify --install buffer,events,process,stream,util,inherits,fs,path,assert,crypto --hack & node ./devUtils/android-release-fix.js",
    "build:web": "cp -r ./assets ./public/assets/ && react-scripts build",
    "build:android:testnet": "react-native bundle --reset-cache --platform android --dev true --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res && cd android && ./gradlew assembleQaRelease",
    "build:android:mainnet": "react-native bundle --reset-cache --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res && cd android && ./gradlew assembleProdRelease",
    "bundle:android": "cd android && ./gradlew bundleRelease",
    "prepare:release": "cd android/app/build/outputs/apk/prod/release && shasum -a 256 app-prod-* > manifest-peach.txt && gpg --sign --detach-sig --default-key 48339A19645E2E53488E0E5479E1B270FACD1BD2 --output ./manifest-peach.sig manifest-peach.txt",
    "build:ios:testnet": "react-native bundle  --reset-cache --platform ios --entry-file index.js --dev true --bundle-output ios/main.jsbundle --assets-dest ios",
    "build:ios:mainnet": "react-native bundle  --reset-cache --platform ios --entry-file index.js --dev false --bundle-output ios/main.jsbundle --assets-dest ios",
    "bump:version": "react-native-version --never-amend",
    "test": "jest --coverage ./tests/unit",
    "test:ci": "jest --ci --forceExit --detectOpenHandles ./tests/unit",
    "test:e2e:ios:build": "detox build --configuration ios",
    "test:e2e:android:build": "detox build --configuration android",
    "test:e2e:ios": "detox test --configuration ios",
    "test:e2e:android": "detox test --configuration android",
    "lint": "eslint . --ext .tsx,.ts"
  },
  "dependencies": {
    "@msml/react-native-notification-badge": "^0.1.4",
    "@react-native-clipboard/clipboard": "^1.8.5",
    "@react-native-community/cli-platform-android": "^7.0.1",
    "@react-native-firebase/analytics": "^14.12.0",
    "@react-native-firebase/app": "^14.12.0",
    "@react-native-firebase/crashlytics": "^14.12.0",
    "@react-native-firebase/messaging": "^14.12.0",
    "@react-navigation/native": "^6.0.13",
    "@react-navigation/stack": "^6.3.4",
    "@tanstack/react-query": "^4.16.1",
    "@types/react-native-snap-carousel": "^3.8.5",
    "assert": "^1.5.0",
    "bip174": "^2.0.1",
    "bip32": "^3.0.1",
    "bip39": "^3.0.4",
    "bitcoinjs-lib": "^6.0.2",
    "buffer": "^6.0.3",
    "ecpair": "^2.0.1",
    "events": "^3.3.0",
    "iban": "^0.0.14",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-native": "0.68.5",
    "react-native-camera": "^4.2.1",
    "react-native-canvas": "^0.1.38",
    "react-native-crypto": "^2.2.0",
    "react-native-crypto-js": "^1.0.0",
    "react-native-device-info": "^8.7.1",
    "react-native-document-picker": "^8.1.2",
    "react-native-dotenv": "^3.3.1",
    "react-native-fast-openpgp": "^2.4.1",
    "react-native-fs": "^2.19.0",
    "react-native-gesture-handler": "^2.8.0",
    "react-native-gradients": "^1.2.0",
    "react-native-level-fs": "^3.0.1",
    "react-native-mmkv-storage": "^0.8.0",
    "react-native-permissions": "^3.3.1",
    "react-native-promise-rejection-utils": "^0.0.1",
    "react-native-qrcode-scanner": "^1.5.5",
    "react-native-qrcode-svg": "^6.1.2",
    "react-native-randombytes": "^3.6.1",
    "react-native-reanimated": "^2.12.0",
    "react-native-restart": "^0.0.24",
    "react-native-safe-area-context": "4.2.4",
    "react-native-screens": "^3.18.2",
    "react-native-share": "^7.9.0",
    "react-native-snap-carousel": "^3.9.1",
    "react-native-svg": "^12.3.0",
    "react-native-typescript-transformer": "^1.2.13",
    "react-native-url-polyfill": "^1.3.0",
    "react-native-web": "0.17.0",
    "react-native-webview": "^11.18.2",
    "react-scripts": "5.0.0",
    "readable-stream": "^3.6.0",
    "rn-nodeify": "^10.3.0",
    "stream-browserify": "^3.0.0",
    "tiny-secp256k1": "^1.1.6",
    "twrnc": "^3.4.1",
    "typescript": "^4.6.3",
    "util": "^0.10.4",
    "varuint-bitcoin": "^1.1.2",
    "zustand": "^4.1.4"
  },
  "react-native": {
    "crypto": "react-native-crypto",
    "path": "path-browserify",
    "fs": "react-native-level-fs",
    "_stream_transform": "readable-stream/transform",
    "_stream_readable": "readable-stream/readable",
    "_stream_writable": "readable-stream/writable",
    "_stream_duplex": "readable-stream/duplex",
    "_stream_passthrough": "readable-stream/passthrough",
    "stream": "stream-browserify"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/runtime": "^7.17.9",
    "@react-native-community/eslint-config": "^3.0.1",
    "@types/iban": "^0.0.32",
    "@types/jest": "^27.4.1",
    "@types/react": "^18.0.0",
    "@types/react-native": "^0.67.4",
    "@types/react-native-canvas": "^0.1.8",
    "@types/react-native-dotenv": "^0.2.0",
    "@types/react-test-renderer": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.38.0",
    "babel-jest": "^27.5.1",
    "detox": "^19.7.1",
    "eslint": "8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-react-native": "^4.0.0",
    "jest": "^27.5.1",
    "jest-transform-stub": "^2.0.0",
    "metro-react-native-babel-preset": "^0.70.1",
    "react-native-svg-transformer": "^1.0.0",
    "react-native-version": "^4.0.0",
    "react-test-renderer": "17.0.2",
    "tailwind-rn": "^3.0.1",
    "tailwindcss": "^2.2.7",
    "ts-jest": "^27.1.4"
  },
  "rnpm": {
    "assets": [
      "./assets/fonts/"
    ]
  },
  "jest": {
    "rootDir": "./",
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@react-native|react-native|@react-native-community|react-native-webview|react-native-canvas|react-native-form-validator|react-native-qrcode-scanner|react-native-permissions|react-native-shadow-2|react-native-qrcode-svg)/)"
    ],
    "setupFiles": [
      "./tests/unit/prepare.ts",
      "./node_modules/react-native-gesture-handler/jestSetup.js"
    ],
    "moduleNameMapper": {
      "\\.(ttf|woff|woff2|eot|otf)$": "jest-transform-stub",
      "\\.(jpg|jpeg|png|gif|webp|svg|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "^@env(.*)$": "<rootDir>/.env.dist$1"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
