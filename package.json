{
  "name": "peach",
  "version": "0.6.0",
  "description": "Peach Application",
  "author": "Peach2Peach",
  "private": true,
  "scripts": {
    "android": "NODE_ENV=sandbox react-native run-android --port=8081 --mode=QaDebug",
    "android:testnet": "NODE_ENV=development react-native run-android --port=8081 --mode=QaDebug",
    "android:mainnet": "NODE_ENV=production react-native run-android --port=8081 --mode=ProdDebug --appIdSuffix=mainnet",
    "ios": "NODE_ENV=sandbox react-native run-ios --port=8081 --scheme \"peach regtest\"",
    "ios:regtest": "NODE_ENV=sandbox react-native run-ios --port=8081 --scheme \"peach regtest\"",
    "ios:testnet": "NODE_ENV=development react-native run-ios --port=8081 --variant=QaDebug",
    "ios:mainnet": "NODE_ENV=production react-native run-ios --port=8081 --variant=ProdDebug --appIdSuffix=mainnet",
    "start": "NODE_ENV=sandbox react-native start --port=8081",
    "start:testnet": "NODE_ENV=development react-native start --port=8081",
    "start:mainnet": "NODE_ENV=production react-native start --port=8081",
    "cache:clear": "react-native start --reset-cache",
    "postinstall": "rn-nodeify --install buffer,stream,util --hack",
    "podinstall": "cd ios && pod install --repo-update",
    "build:android:testnet": "./devUtils/buildAndroidTestnet.sh",
    "build:android:mainnet": "./devUtils/buildAndroidMainnet.sh",
    "bundle:android:testnet": "./devUtils/bundleAndroidTestnet.sh",
    "bundle:android:mainnet": "./devUtils/bundleAndroidMainnet.sh",
    "deploy:android:testnet": "./devUtils/buildAndroidTestnet.sh && ./devUtils/bundleAndroidTestnet.sh",
    "deploy:android:mainnet": "./devUtils/buildAndroidMainnet.sh && ./devUtils/bundleAndroidMainnet.sh",
    "prepare:release": "./devUtils/prepareRelease.sh",
    "build:ios:testnet": "./devUtils/buildIOSTestnet.sh",
    "build:ios:mainnet": "./devUtils/buildIOSMainnet.sh",
    "bump:version": "react-native-version --never-amend",
    "release:android": "./devUtils/buildAndroidMainnet.sh && ./devUtils/bundleAndroidMainnet.sh && ./devUtils/prepareRelease.sh",
    "version:minor": "npm version minor && npm i && npm run podinstall && npm run release:android",
    "version:patch": "npm version patch && npm i && npm run podinstall && npm run release:android",
    "version:hotfix": "npm run bump:version && npm i && npm run podinstall && npm run release:android",
    "postversion": "react-native-version",
    "test": "jest ./src",
    "test:coverage": "jest --coverage ./src",
    "test:ci": "jest --maxWorkers=100% --ci ./src",
    "tsc": "tsc",
    "lint": "eslint . --ext .tsx,.ts"
  },
