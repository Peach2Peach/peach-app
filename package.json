{
  "name": "peach",
  "version": "0.0.1-rc.6",
  "description": "Peach Application",
  "author": "Peach2Peach",
  "private": true,
  "scripts": {
    "web": "cp -r ./assets ./public/assets/ && react-scripts start",
    "android": "NODE_ENV=sandbox react-native run-android --port=8081",
    "ios": "NODE_ENV=sandbox react-native run-ios --port=8081",
    "ios:testnet": "NODE_ENV=development react-native run-ios --port=8081",
    "ios:mainnet": "NODE_ENV=production react-native run-ios --port=8081",
    "start": "NODE_ENV=sandbox react-native start --port=8081",
    "start:dev": "NODE_ENV=development react-native start --port=8081",
    "start:prod": "NODE_ENV=production react-native start --port=8081",
    "cache:clear": "react-native start --reset-cache",
    "postinstall": "rn-nodeify --install buffer,events,process,stream,util,inherits,fs,path,assert,crypto --hack & node ./devUtils/android-release-fix.js",
    "build:web": "cp -r ./assets ./public/assets/ && react-scripts build",
    "style:update": "create-tailwind-rn && mv ./styles.json ./src/styles/styles.json",
    "build:android:testnet": "react-native bundle --reset-cache --platform android --dev true --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res && cd android && ./gradlew assembleRelease",
    "build:android:mainnet": "react-native bundle --reset-cache --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res && cd android && ./gradlew assembleRelease",
    "bundle:android": "react-native-version --never-amend && cd android && ./gradlew bundleRelease",
    "bundle:ios:testnet": "react-native-version --never-amend && NODE_ENV=development react-native run-ios --configuration Release",
    "bundle:ios:mainnet": "react-native-version --never-amend && NODE_ENV=production react-native run-ios --configuration Release",
    "test": "jest --coverage",
    "test:ci": "jest --ci",
    "lint": "eslint ."
  },
  "dependencies": {
    "@react-native-clipboard/clipboard": "^1.8.5",
    "@react-native-community/cli-platform-android": "^7.0.1",
    "@react-native-firebase/app": "^14.7.0",
    "@react-native-firebase/crashlytics": "^14.7.0",
    "@react-navigation/native": "^6.0.10",
    "@react-navigation/stack": "^6.2.1",
    "@types/react-native-snap-carousel": "^3.8.5",
    "assert": "^1.5.0",
    "bip174": "^2.0.1",
    "bip39": "^3.0.4",
    "bitcoinjs-lib": "^5.2.0",
    "buffer": "^6.0.3",
    "ecpair": "^2.0.1",
    "events": "^3.3.0",
    "iban": "^0.0.14",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "react": "17.0.2",
    "react-dom": "17.0.1",
    "react-native": "0.68.0",
    "react-native-camera": "^4.2.1",
    "react-native-crypto": "^2.2.0",
    "react-native-crypto-js": "^1.0.0",
    "react-native-document-picker": "^5.2.0",
    "react-native-dotenv": "^3.3.1",
    "react-native-encrypted-storage": "^4.0.2",
    "react-native-fast-openpgp": "^2.2.3",
    "react-native-form-validator": "^0.5.1",
    "react-native-fs": "^2.19.0",
    "react-native-gesture-handler": "~2.3.2",
    "react-native-gradients": "^1.2.0",
    "react-native-level-fs": "^3.0.1",
    "react-native-permissions": "^3.3.1",
    "react-native-promise-rejection-utils": "^0.0.1",
    "react-native-qrcode-scanner": "^1.5.5",
    "react-native-qrcode-svg": "^6.1.2",
    "react-native-randombytes": "^3.6.1",
    "react-native-reanimated": "^2.6.0",
    "react-native-safe-area-context": "4.2.4",
    "react-native-screens": "^3.13.1",
    "react-native-shadow-2": "^6.0.4",
    "react-native-share": "^7.3.7",
    "react-native-snap-carousel": "^3.9.1",
    "react-native-svg": "^12.1.1",
    "react-native-typescript-transformer": "^1.2.13",
    "react-native-url-polyfill": "^1.3.0",
    "react-native-web": "0.17.0",
    "react-scripts": "5.0.0",
    "readable-stream": "^3.6.0",
    "rn-nodeify": "^10.3.0",
    "stream-browserify": "^3.0.0",
    "tailwind-react-native-classnames": "^1.5.1",
    "typescript": "^4.6.3",
    "util": "^0.10.4",
    "varuint-bitcoin": "^1.1.2"
  },
  "react-native": {
    "crypto": "react-native-crypto",
    "path": "path-browserify",
    "fs": "react-native-level-fs",
    "_stream_transform": "readable-stream/transform",
    "_stream_readable": "readable-stream/readable",
    "_stream_writable": "readable-stream/writable",
    "_stream_duplex": "readable-stream/duplex",
    "_stream_passthrough": "readable-stream/passthrough",
    "stream": "stream-browserify"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/runtime": "^7.17.9",
    "@react-native-community/eslint-config": "^3.0.1",
    "@types/iban": "^0.0.32",
    "@types/jest": "^27.4.1",
    "@types/react": "^18.0.0",
    "@types/react-native": "^0.67.4",
    "@types/react-native-dotenv": "^0.2.0",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "babel-jest": "^27.5.1",
    "eslint": "8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-react-native": "^4.0.0",
    "jest": "^27.5.1",
    "jest-transform-stub": "^2.0.0",
    "metro-react-native-babel-preset": "^0.70.1",
    "react-native-svg-transformer": "^1.0.0",
    "react-native-version": "^4.0.0",
    "react-test-renderer": "17.0.1",
    "tailwind-rn": "^3.0.1",
    "tailwindcss": "^2.2.7",
    "ts-jest": "^27.1.4"
  },
  "rnpm": {
    "assets": [
      "./assets/fonts/"
    ]
  },
  "jest": {
    "rootDir": "./",
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@react-native|react-native|@react-native-community|react-native-form-validator|react-native-qrcode-scanner|react-native-permissions|react-native-shadow-2|react-native-qrcode-svg)/)"
    ],
    "setupFiles": [
      "./tests/prepare.ts",
      "./node_modules/react-native-gesture-handler/jestSetup.js"
    ],
    "moduleNameMapper": {
      "\\.(ttf|woff|woff2|eot|otf)$": "jest-transform-stub",
      "\\.(jpg|jpeg|png|gif|webp|svg|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "^@env(.*)$": "<rootDir>/.env.dist$1"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
