{
  "name": "peach",
  "version": "0.0.1",
  "description": "Peach Application",
  "author": "Peach2Peach",
  "private": true,
  "scripts": {
    "web": "cp -r ./assets ./public/assets/ && react-scripts start",
    "android": "react-native run-android --port=8081",
    "ios": "react-native run-ios --port=8081",
    "start": "react-native start --port=8081",
    "cache:clear": "react-native start --reset-cache",
    "postinstall": "rn-nodeify --install buffer,events,process,stream,util,inherits,fs,path,assert,crypto --hack",
    "build:web": "cp -r ./assets ./public/assets/ && react-scripts build",
    "style:update": "create-tailwind-rn && mv ./styles.json ./src/styles/styles.json",
    "build:android": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res && cd android && ./gradlew assembleRelease",
    "test": "jest --coverage",
    "test:ci": "jest --ci",
    "lint": "eslint ."
  },
  "dependencies": {
    "@react-native-clipboard/clipboard": "^1.9.0",
    "@react-native-community/cli-platform-android": "^6.1.0",
    "@react-navigation/native": "^6.0.2",
    "@react-navigation/stack": "^6.0.6",
    "bip39": "^3.0.4",
    "bitcoinjs-lib": "^5.2.0",
    "buffer": "^6.0.3",
    "events": "^1.1.1",
    "iban": "^0.0.14",
    "path-browserify": "^1.0.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-native": "0.64.2",
    "react-native-camera": "^4.2.1",
    "react-native-crypto": "^2.2.0",
    "react-native-crypto-js": "^1.0.0",
    "react-native-document-picker": "^5.2.0",
    "react-native-dotenv": "^3.2.0",
    "react-native-encrypted-storage": "^4.0.2",
    "react-native-fast-openpgp": "^2.0.0-rc1",
    "react-native-file-picker": "^0.0.20",
    "react-native-form-validator": "^0.5.1",
    "react-native-fs": "^2.18.0",
    "react-native-gesture-handler": "~1.10.2",
    "react-native-gradients": "^1.2.0",
    "react-native-level-fs": "^3.0.1",
    "react-native-permissions": "^3.1.0",
    "react-native-qrcode-scanner": "^1.5.4",
    "react-native-qrcode-svg": "^6.1.1",
    "react-native-randombytes": "^3.6.1",
    "react-native-reanimated": "^2.2.0",
    "react-native-safe-area-context": "3.2.0",
    "react-native-screens": "~3.4.0",
    "react-native-shadow-2": "^5.1.0",
    "react-native-share": "^7.0.0",
    "react-native-svg": "^12.1.1",
    "react-native-swiper": "^1.6.0",
    "react-native-typescript-transformer": "^1.2.13",
    "react-native-web": "0.17.0",
    "react-scripts": "3.4.1",
    "readable-stream": "^3.6.0",
    "rn-nodeify": "^10.3.0",
    "stream-browserify": "^3.0.0",
    "tailwind-react-native-classnames": "^1.4.1",
    "typescript": "^4.3.5"
  },
  "react-native": {
    "crypto": "react-native-crypto",
    "path": "path-browserify",
    "fs": "react-native-level-fs",
    "_stream_transform": "readable-stream/transform",
    "_stream_readable": "readable-stream/readable",
    "_stream_writable": "readable-stream/writable",
    "_stream_duplex": "readable-stream/duplex",
    "_stream_passthrough": "readable-stream/passthrough",
    "stream": "stream-browserify"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/runtime": "^7.14.8",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/iban": "^0.0.32",
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.15",
    "@types/react-native": "^0.64.12",
    "@types/react-native-dotenv": "^0.2.0",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "babel-jest": "^27.0.6",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-flowtype": "^7.0.0",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^27.0.6",
    "jest-transform-stub": "^2.0.0",
    "metro-react-native-babel-preset": "^0.64.0",
    "react-native-svg-transformer": "^0.14.3",
    "react-test-renderer": "17.0.1",
    "tailwind-rn": "^3.0.1",
    "tailwindcss": "^2.2.7",
    "ts-jest": "^27.0.4"
  },
  "jest": {
    "rootDir": "./",
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@react-native|react-native|@react-native-community|react-native-form-validator|react-native-qrcode-scanner|react-native-permissions|react-native-qrcode-svg)/)"
    ],
    "setupFiles": [
      "./tests/prepare.js",
      "./node_modules/react-native-gesture-handler/jestSetup.js"
    ],
    "moduleNameMapper": {
      "\\.(ttf|woff|woff2|eot|otf)$": "jest-transform-stub",
      "\\.(jpg|jpeg|png|gif|webp|svg|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "^@env(.*)$": "<rootDir>/.env.dist$1"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
